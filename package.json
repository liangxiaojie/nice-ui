{
  "name": "nice-ui",
  "version": "0.0.1",
  "description": "simple and nice ui components",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "rimraf lib/*",
    "build": "npm run build:lib && npm run build:dist",
    "prebuild:lib": "rimraf lib/*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:lib:watch": "npm run build -- --watch",
    "prebuild:dist": "rimraf dist/*",
    "build:dist": "npm run build:dist:dev && npm run build:dist:prod",
    "build:dist:dev": "webpack",
    "build:dist:prod": "cross-env NODE_ENV=production webpack",
    "test": "npm run test:jest && npm run test:size",
    "test:jest": "jest",
    "test:watch": "npm run test:jest -- --watch",
    "test:size": "bundlesize",
    "lint": "eslint . --cache",
    "lint-staged": "lint-staged",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liangxiaojie/nice-ui.git"
  },
  "keywords": [
    "nice-ui",
    "react",
    "react-components",
    "javascript"
  ],
  "author": "XiaoJie Liang <liangxiaojie0@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liangxiaojie/nice-ui/issues"
  },
  "homepage": "https://github.com/liangxiaojie/nice-ui#readme",
  "dependencies": {
    "prop-types": "^15.5.10",
    "styled-components": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "bundlesize": "^0.6.1",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-flowtype-errors": "^3.3.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.0",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.49.1",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "pre-commit": "^1.2.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "webpack": "^3.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/nice-ui.min.js",
      "threshold": "50kB"
    }
  ],
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "git add"
    ]
  },
  "pre-commit": "lint-staged"
}
